<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <Button
                android:id="@+id/withdrawal_backtomain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/leftarrow">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:background="#4Dffffff"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="회원탈퇴"
            android:textColor="@color/white"
            android:gravity="left|center"
            android:textSize="25dp"
            android:fontFamily="@font/elicedigitalnaeumbold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@drawable/startbg"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴 "
            android:textSize="35dp"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textStyle="italic">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원탈퇴를 하실경우 모든 정보가 삭제됩니다.\n 삭제된 정보는 다시 복구할 수 없습니다."
            android:textSize="18dp"
            android:gravity="right"
            android:fontFamily="@font/elicedigitalbaeumregular">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="4.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴사유"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textSize="25dp"
            android:paddingBottom="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서비스 이용이 어려움."
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="큰 도움이 되지 않았음."
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
                <RadioButton
                    android:id="@+id/withdrawal_etcBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
            </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/withdrawal_etcDetail"
            android:enabled="false"
            android:layout_width="340dp"
            android:layout_height="140dp"
            android:hint="기타 탈퇴사유를 입력해주세요."
            android:textSize="15dp"
            android:background="@drawable/edge"
            android:padding="20dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="right|top"
        android:paddingRight="20dp">
        <Button
            android:id="@+id/withdrawal_withdrawalBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="탈퇴하기"
            android:textSize="25dp"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:background="@drawable/interest_nextbtn">
        </Button>
    </LinearLayout>
</LinearLayout>