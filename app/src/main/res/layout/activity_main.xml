<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    android:weightSum="12">

    <!-- 위 백그라운드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
    </LinearLayout>

    <!-- 메인 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="12"
        android:paddingTop="50dp"
        android:paddingBottom="30dp">
        <ImageView
            android:id="@+id/myinterest_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:src="@drawable/main_userphoto">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/main_nickname_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="모모"
                android:textSize="25dp"
                android:fontFamily="@font/elicedigitalnaeumbold"
                android:gravity="right|center"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" 님"
                android:textSize="25dp"
                android:fontFamily="@font/elicedigitalnaeumbold"
                android:gravity="left|center"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="11"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="7dp">
            <TextView
                android:id="@+id/main_interest_line"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9.5"
                android:text="패션"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/elicedigitalnaeumbold"
                android:background="@drawable/edge"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
            </TextView>
            <Button
                android:id="@+id/main_edit_interest"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="@drawable/main_modify">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="11"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="7dp">
            <TextView
                android:id="@+id/main_introduce_line"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="9.5"
                android:text="나이키 운동화에 관심이 있어요!"
                android:gravity="center"
                android:textSize="15dp"
                android:fontFamily="@font/elicedigitalnaeumbold"
                android:background="@drawable/edge"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
            </TextView>
            <Button
                android:id="@+id/main_edit_introduce"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5"
                android:background="@drawable/main_modify">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <!-- 네비바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:paddingBottom="2dp">
            <Button
                android:id="@+id/tousedtrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="37dp"
                android:background="@drawable/main_usedtrade">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:paddingBottom="15dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp">
            <Button
                android:id="@+id/tomain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_gotohome">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:paddingBottom="7dp">
            <Button
                android:id="@+id/tochat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_talk"
                android:layout_marginTop="43dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>