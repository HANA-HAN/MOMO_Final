<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- 위쪽 친구 요청 목록 및 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <Button
                android:id="@+id/backtoitemlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/leftarrow">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:background="#4Dffffff"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="중고 거래"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <!-- 메인 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <!-- 사진-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:src="@drawable/nike"/>
        </LinearLayout>

        <!--실내용-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingTop="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="10dp">
            <!--제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center"
                    android:padding="13dp"
                    android:text="제목"
                    android:fontFamily="@font/elicedigitalnaeumbold"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="13dp"
                    android:hint="내용을 입력해주세요"
                    android:background="@drawable/edge"
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
            </LinearLayout>

            <!--가격-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center"
                    android:padding="13dp"
                    android:text="가격"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/elicedigitalnaeumbold"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="13dp"
                    android:hint="내용을 입력해주세요"
                    android:background="@drawable/edge"
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
            </LinearLayout>

            <!--내용-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center"
                    android:padding="13dp"
                    android:text="내용"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/elicedigitalnaeumbold"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:padding="13dp"
                    android:gravity="top"
                    android:hint="내용을 입력해주세요"
                    android:background="@drawable/edge"
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
            </LinearLayout>
        </LinearLayout>

        <!--글 올리기 버튼-->
        <Button
            android:layout_gravity="right|top"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="글 올리기"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/roundconerbgbtn"
            android:layout_margin="10dp"
            android:fontFamily="@font/elicedigitalnaeumbold"/>
    </LinearLayout>
</LinearLayout>