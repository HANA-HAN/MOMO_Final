<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- 위쪽 친구 요청 목록 및 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <Button
                android:id="@+id/backtoitemlist4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/leftarrow">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:background="#4Dffffff"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="중고 거래"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/elicedigitalnaeumbold">
        </TextView>
    </LinearLayout>

    <!-- 메인 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <!-- 사진-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.4"
                android:gravity="center"
                android:src="@drawable/makeup"/>

            <!-- 판매자이름-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:padding="7dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/icon_makeup"/>
                <TextView
                    android:id="@+id/iteminfo3_sellerName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:layout_marginLeft="10dp"
                    android:text="쿨톤굿"
                    android:textSize="23dp"
                    android:gravity="left|center"
                    android:fontFamily="@font/elicedigitalbaeumregular"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7px"
                android:background="#26000000"
                android:layout_weight="0.1">
            </View>

            <!-- 제목 및 정보-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.5"
                android:orientation="vertical">
                <!-- 제목-->
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메이크업 박스"
                    android:fontFamily="@font/elicedigitalnaeumbold"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <!-- 정보-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메이크업 박스 쓸일이 없어서 팝니다~~\n가격은 20,000원 생각하고 있어요."
                    android:textSize="17dp"
                    android:fontFamily="@font/elicedigitalbaeumregular"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 가격 및 채팅으로 거래하기 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:background="@drawable/edge">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="20,000"
            android:textSize="20dp"
            android:fontFamily="@font/elicedigitalbaeumregular"
            android:gravity="right|center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text=" 원"
            android:textSize="20dp"
            android:fontFamily="@font/elicedigitalbaeumregular"
            android:gravity="left|center"/>
        <Button
            android:id="@+id/iteminfo3_gotochatroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/roundconerbgbtn"
            android:text="채팅으로 거래하기"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>