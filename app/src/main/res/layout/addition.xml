<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbg"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:text="관심 카테고리 추가 신청"
            android:textColor="@color/white"
            android:textSize="27dp"
            android:textStyle="bold"
            android:fontFamily="@font/elicedigitalnaeumbold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/elicedigitalbaeumregular"
            android:gravity="center|top"
            android:paddingTop="10dp"
            android:text="자신이 추가하고 싶은 관심사 카테고리를 입력해주ㅔ세요."
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="#4Dffffff"
        android:orientation="vertical"
        android:weightSum="5"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="관심사 이름"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/elicedigitalnaeumbold">
        </TextView>
        <EditText
            android:id="@+id/addition_interestName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="20dp"
            android:background="@drawable/edge"
            android:hint="관심사 이름을 입력해주세요."
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/elicedigitalbaeumregular">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:paddingTop="17dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:gravity="left|top">
            <Button
                android:id="@+id/addition_cancelBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/interest_nextbtn"
                android:paddingTop="3dp"
                android:text="뒤로가기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/elicedigitalnaeumbold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:gravity="right|top">
            <Button
                android:id="@+id/addition_nextBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/interest_nextbtn"
                android:paddingTop="3dp"
                android:text="신청하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/elicedigitalnaeumbold"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>