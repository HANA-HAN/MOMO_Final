<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/startbgflip">

    <!-- 위쪽 친구 요청 목록 및 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <Button
                android:id="@+id/backtochatlistBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/leftarrow">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:background="#4Dffffff"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.75"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="친구 요청 목록"
            android:textSize="23dp"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <!-- 메인 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendrequestlist_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:scrollbars="vertical"
        android:padding="10dp"/>
</LinearLayout>