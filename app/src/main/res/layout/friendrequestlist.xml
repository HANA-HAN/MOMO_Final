<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/startbgflip">

    <!-- 위쪽 친구 요청 목록 및 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <Button
                android:id="@+id/backtochatlistBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/leftarrow">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:background="#4Dffffff"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.75"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="친구 요청 목록"
            android:textSize="23dp"
            android:fontFamily="@font/elicedigitalnaeumbold"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <!-- 메인 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/request_Linear1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edge"
                android:visibility="visible"
                android:padding="7dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/request_Linear1_interest_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.5"
                        android:padding="3dp"
                        android:src="@drawable/icon_fashion"
                        android:gravity="center|bottom"
                        android:layout_margin="3dp"/>
                    <TextView
                        android:id="@+id/request_Linear1_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:text="조던마니아"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/elicedigitalnaeumbold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/request_Linear1_textL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="나이키 브랜드에 관심이 많아요.\n스타일러를 알아보고 있어요."
                    android:textColor="@color/black"
                    android:fontFamily="@font/elicedigitalbaeumregular">
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/accept_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:background="@drawable/check"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/reject_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/reject"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_Linear2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edge"
                android:visibility="visible"
                android:padding="7dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/request_Linear2_interest_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.5"
                        android:padding="3dp"
                        android:src="@drawable/icon_fashion"
                        android:gravity="center|bottom"
                        android:layout_margin="3dp"/>
                    <TextView
                        android:id="@+id/request_Linear2_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:text="이지"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/elicedigitalnaeumbold"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/request_Linear2_textL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="아디다스 운동화 수집중~"
                    android:textColor="@color/black"
                    android:fontFamily="@font/elicedigitalbaeumregular">
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/accept_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:background="@drawable/check"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/reject_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/reject"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_Linear3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edge"
                android:visibility="visible"
                android:padding="7dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/request_Linear3_interest_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.5"
                        android:padding="3dp"
                        android:src="@drawable/icon_makeup"
                        android:gravity="center|bottom"
                        android:layout_margin="3dp"/>
                    <TextView
                        android:id="@+id/request_Linear3_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:text="MakeM"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/elicedigitalnaeumbold"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/request_Linear3_textL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="쿨톤 메이크업에 관심이 많아요."
                    android:textColor="@color/black"
                    android:fontFamily="@font/elicedigitalbaeumregular">
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/accept_btn3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:background="@drawable/check"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/reject_btn3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/reject"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/request_Linear4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edge"
                android:visibility="visible"
                android:padding="7dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/request_Linear4_interest_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6.5"
                        android:padding="3dp"
                        android:src="@drawable/icon_dance"
                        android:gravity="center|bottom"
                        android:layout_margin="3dp"/>
                    <TextView
                        android:id="@+id/request_Linear4_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2.5"
                        android:text="스트릿"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/elicedigitalnaeumbold"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/request_Linear4_textL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="같이 댄스 틱톡 찍으실 분 구해요"
                    android:textColor="@color/black"
                    android:fontFamily="@font/elicedigitalbaeumregular">
                </TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="10">
                    <Button
                        android:id="@+id/accept_btn4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5.5"
                        android:background="@drawable/check"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center" />
                    <Button
                        android:id="@+id/reject_btn4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/reject"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>